FROM <%= distro %>:<%= version %>
MAINTAINER Devops <devops@arnoldclark.com>

LABEL gocd.version="<%= gocd_version %>" \
  description="GoCD agent based on <%= distro %> version <%= version %>" \
  maintainer="GoCD <go-cd-dev@googlegroups.com>" \
  gocd.full.version="<%= gocd_full_version %>" \
  gocd.git.sha="<%= gocd_git_sha %>"

ADD "<%= download_url %>" /tmp/go-agent.zip
<% add_files.each do |file, meta| -%>
ADD <%= meta[:url] %> <%= file %>
<% end %>
# allow mounting ssh keys, dotfiles, and the go server config and data
VOLUME /godata

# force encoding
ENV LANG=en_US.utf8

RUN \
<% unless add_files.empty? -%>
# add mode and permissions for files we added above
  <%= add_files.collect {|file, meta| ["chmod #{meta[:mode]} #{file}", "chown #{meta[:owner]}:#{meta[:group]} #{file}"]}.flatten.join(" && \\\n  ") %> && \
<% end -%>
# add our user and group first to make sure their IDs get assigned consistently,
# regardless of whatever dependencies get added
  <%= create_user_and_group.join(" && \\ \n  ") -%> && \
  <%= before_install.join(" && \\ \n  ") -%> && \
# unzip the zip file into /go-agent, after stripping the first path prefix
  unzip /tmp/go-agent.zip -d / && \
  mv go-agent-<%= gocd_version %> /go-agent && \
  rm /tmp/go-agent.zip

# ---- custom devops
RUN apk update && apk upgrade && \
    apk add ansible python3 openssl

ADD rollback.py /
ADD id_rsa /home/go/.ssh/id_rsa
ADD known_hosts /home/go/.ssh/known_hosts

RUN chmod +x /rollback.py && chown go:go /rollback.py
RUN chmod -R 600 /home/go/.ssh/ && chown -R go:go /home/go/.ssh
RUN chmod 700 /home/go/.ssh

# install build tools for ssl
RUN apk add gcc musl-dev libffi-dev python3-dev openssl openssl-dev curl

RUN python3 -m pip install requests pyOpenSSL

# remove build tools 
RUN apk del gcc musl-dev libffi-dev python3-dev openssl-dev

# add docker 1.13.1
ADD https://get.docker.com/builds/Linux/x86_64/docker-1.13.1.tgz /tmp

RUN tar -xf /tmp/docker-1.13.1.tgz -C /usr/bin/ --strip-components=1 && rm -rf /tmp/docker-1.13.1.tgz

ADD docker-entrypoint.sh /

ENTRYPOINT ["/docker-entrypoint.sh"]
